{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es2015", "es2016"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "jsx": "react",
        "plugins": [],
        "outDir": "/lib",
        "declaration": true
    },
    "include": ["src/components"],
    "exclude": ["node_modules", "**/__tests__/*"]
}
